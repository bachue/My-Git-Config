set blame-view = date:default author:full file-name:auto id:yes,color line-number:yes,interval=1 text
set grep-view = file-name:yes line-number:yes,interval=1 text
set tree-view = line-number:no,interval=1 mode author:full file-size:units date:default id:no file-name
set pager-view = line-number:yes,interval=1 text
bind generic <Ctrl-f> scroll-page-down
bind generic <Ctrl-b> scroll-page-up
